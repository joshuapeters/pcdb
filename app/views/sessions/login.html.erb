<div class="w-full max-w-xs rounded-lg shadow-xl flex-initial p-6">
  <h2>Log In</h2>
  <%= form_tag '/login' do %>
    Username: <%= text_field_tag :username %><br>
    Password: <%= password_field_tag :password %><br>
    <%= submit_tag "Log In", class: "btn-primary" %>
  <% end %>
  <%= button_to 'Create User', new_user_path, method: :get%>
</div>